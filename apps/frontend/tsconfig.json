{
  "extends": "../../packages/typescript-config/base.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./app/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
